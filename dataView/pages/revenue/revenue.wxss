/* pages/revenue/revenue.wxss */
page {
	width: 100%;
	background-color: #e3e7f5;
	overflow-x: hidden;
}
.content {
	width: 100%;
}
.warp {
	width: 90%;
	margin: 0 auto;
}
.banner {
	width: 100%;
	overflow: hidden;
	position: relative;
	margin-top: 20rpx;
}
.banner image {
	width: 100%;
}
.banner-txt {
	width: 90%;
	padding: 30rpx 5%;
	position: absolute;
	left: 0;
	top: 0;
	font-size: 28rpx;
	color: #fff;
}
sub {
	font-size: 20rpx;
	vertical-align: text-top;
}
.banner-top {
	width: 100%;
	display: flex;
	align-items: center;
	justify-content: space-between;
	font-size: 32rpx;
}
.banner-top text {
	font-size: 28rpx;
}
.banner-num {
	width: 100%;
	margin-top: 30rpx;
}
.banner-num text {
	font-size: 50rpx;
}
.banner-bottom {
	width: 100%;
	margin-top: 100rpx;
}
.revenue {
	width: 100%;
	min-height: 200rpx;
	/* margin: 20rpx auto 50rpx; */
}
.title {
	width: 100%;
	display: flex;
	align-items: center;
}
.title image {
	width: 50rpx;
	margin-right: 20rpx;
}
.title text {
	font-size: 30rpx;
	color: #000000;
}
.revenue-list {
	width: 100%;
	min-height: 200rpx;
	/* background-color: #293c4b; */
	border-radius: 5px;
	overflow: hidden;
	margin-top: 30rpx;
	padding: 30rpx 4%;
}
.revenue-top {
	width: 50%;
	display: flex;
	align-items: center;
	justify-content: space-between;
	margin-bottom: 50rpx;
	margin: 0 auto;
}
.top-li {
	width: 50%;
	font-size: 28rpx;
	color: #222222;
	text-align: center;
}
.top-li.cur text {
	color: #e5004f;
	border-bottom: 1px solid #e5004f;
	display: inline-block;
	padding-bottom: 5rpx;
}
.ec-canvas {
	width: 100%;
	height: 95%;
}
.echarts-con {
	width: 100%;
	height: 400rpx;
}
.consumption {
	width: 90%;
	min-height: 200rpx;
	margin: 0 auto 60rpx;
}
.charts-tm {
	width: 100%;
	font-size: 24rpx;
	color: #222222;
}
.name {
	width: 100%;
	text-align: center;
	font-size: 28rpx;
	color: #1BE6DA;
	margin-bottom: 30rpx;
}
.name text {
	border-bottom: 1px solid #1BE6DA;
}
.circle {
	width: 100%;
	height: 350rpx;
	text-align: center;
	position: relative;
}
.circle image {
	width: 350rpx;
}
.circle-txt {
	width: 100%;
	height: 100%;
	display: flex;
	align-items: center;
	justify-content: center;
	flex-wrap: wrap;
	left: 0;
	top: 0;
	position: absolute;
}
.circle-txt view {
	width: 100%;
	color: #fff;
	font-size: 28rpx;
}
.circle-txt view text {
	font-size: 36rpx;
}
.circle-txt view:first-child {
	margin-top: 130rpx;
}
.circle-txt view:last-child {
	margin-bottom: 120rpx;
}
.circle {
	width: 100%;
	height: 600rpx;
	text-align: center;
	position: relative;
}
.circle image {
	width: 600rpx;
}
.circle-txt {
	width: 100%;
	height: 100%;
	display: flex;
	align-items: center;
	justify-content: center;
	flex-wrap: wrap;
	left: 0;
	top: 0;
	position: absolute;
}
.circle-txt view {
	width: 100%;
	color: #000000;
	font-size: 28rpx;
}
.circle-txt view text {
	font-size: 36rpx;
}
.circle-txt view:first-child {
	margin-top: 207rpx;
}
.circle-txt view:last-child {
	margin-bottom: 252rpx;
}